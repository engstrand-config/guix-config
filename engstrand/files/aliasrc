alias la='ls -a'
alias ll='ls -l'
alias ls='ls -p --color=auto'
alias grep='grep --color=auto'
alias vim='nvim'

alias shepinit='~/engstrand-config/guix-dotfiles/.config/shepherd/init.d/; ls -a'
alias dots='~/engstrand-config/guix-dotfiles/; ls -a'

alias sysrec='sudo guix system -L ~/engstrand-config/guix-dotfiles/ reconfigure ~/engstrand-config/guix-dotfiles/systems/system-$(hostname).scm'
alias homerec='guix home -L ~/engstrand-config/guix-dotfiles reconfigure ~/engstrand-config/guix-dotfiles/home/home-$USER.scm'

alias gs='git status'
alias gd='git diff'
alias ga='git add'
alias gr='git restore'
alias gc='git commit -m'

alias getsha='guix hash --hash=sha256 --format=nix-base32 -rx'
